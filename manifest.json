{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Codeable Notifications",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Shows the number of unread Codeable notifications in the document title (Gmail style)",
  "content_scripts": [
    {
      "matches": ["https://app.codeable.io/*"],
      "js": ["content-script.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject-script.js"],
      "matches": ["https://app.codeable.io/*"]
    }
  ],
  "icons": { 
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}